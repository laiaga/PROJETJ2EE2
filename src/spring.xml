<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="person" class="fr.projet.jee.beans.Person"/>
    <bean id="group" class="fr.projet.jee.beans.Group"/>
    
    <!-- pour décrire les classes à instancier -->
    <context:component-scan base-package="fr.projet.jee.dao" />
    <context:component-scan base-package="fr.projet.jee.utils" />
    
    <context:property-placeholder location="classpath:fr/projet/jee/utils/names.properties"/>
    

</beans>